require "rake/clean"
DEFS = FileList["def/*.rb"]
ERBS = FileList["erb/*.c"]
TARGETS = []
DSTDIR = "../ext/types/"

directory DSTDIR

DEFS.each do |rb|
  TARGETS << c = DSTDIR+File.basename(rb,".rb")+".c"
  # generate C from templates
  file c => [rb,DSTDIR] do |t|
    sh "ruby cogen.rb #{t.prerequisites[0]} > #{t.name}"
  end
end

ERBS.each do |erb|
  TARGETS << c = DSTDIR+File.basename(erb)
  # generate C from ERB
  file c => [erb,DSTDIR] do |t|
    sh "erb #{t.prerequisites[0]} > #{t.name}"
  end
end

task :default => TARGETS

CLEAN.include TARGETS
